{
  "scripts": {
    "dev": "vite",
    "dev:public": "tsc -p tsconfig.public.json --watch",
    "prebuild": "npm run build:public",
    "build": "vite build",
    "build:public": "tsc -p tsconfig.public.json --noEmit && node ./buildPublic.js",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "test:run": "run-p test:all",
    "test:all": "vitest run 2>/dev/null",
    "test:watch": "vitest",
    "test:one": "vitest --reporter verbose",
    "style-lint": "stylelint \"**/*.{css,scss,vue}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "name": "radiomag-client-vue",
  "private": true,
  "type": "module"
}
